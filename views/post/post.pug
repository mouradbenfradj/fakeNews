extends ../layout
append content
block sideBarNav
    li.active
        a(href='/posts/addPost')
            | add new news
            span.sr-only (current)
block date
    h1.page-header Dashboard
    h2.sub-header Add Post
    .table-responsive
        form(method='POST' action='/posts/post')
            div.form-group
                label(for='news') news
                input.form-control(type='text' id='news' required='true' placeholder='news' name='news')
            //div.form-group
                label(for='password') Password
                input.form-control(type='password' id='password' placeholder='password' name='password')
            button.btn.btn-primary(type='submit') save
